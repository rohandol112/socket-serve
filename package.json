{
  "name": "socket-serve",
  "version": "1.0.0",
  "description": "Real-time socket-like API for serverless platforms. Socket.IO experience without WebSockets. Now with Edge Runtime support, compression, presence, and more.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rohandol112/socket-serve.git"
  },
  "bugs": {
    "url": "https://github.com/rohandol112/socket-serve/issues"
  },
  "homepage": "https://socket-serve.mintlify.app",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.js",
